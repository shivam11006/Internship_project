<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender - for development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender - backup logs to file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            <!-- Total size cap -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Database Appender - our custom appender -->
    <appender name="DATABASE" class="com.example.legalaid_backend.logging.DatabaseLogAppender">
        <!-- Database appender will auto-inject repository via SpringContextHolder -->
    </appender>

    <!-- Async wrapper for database appender to avoid blocking -->
    <appender name="ASYNC_DATABASE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="DATABASE" />
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ASYNC_DATABASE" />
    </root>

    <!-- Package-specific log levels -->
    <logger name="com.example.legalaid_backend" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ASYNC_DATABASE" />
    </logger>

    <!-- SQL logging (disabled in production/development - uncomment DEBUG for troubleshooting) -->
    <logger name="org.hibernate.SQL" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Hibernate dialect logging -->
    <logger name="org.hibernate.dialect" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Hibernate type logging -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Spring logging -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

</configuration>